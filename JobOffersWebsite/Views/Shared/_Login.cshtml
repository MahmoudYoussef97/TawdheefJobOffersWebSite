@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
    {@Html.AntiForgeryToken()
    <ul class="navbar-nav ml-auto">
        <li class="pr-3">
            @Html.ActionLink("Welcome " + User.Identity.GetUserName(), "Index", "Manage", new { @class = "btn btn-outline-warning navbar-buttons" })
        </li>
        @if (this.User.IsInRole("Publisher"))
        {
    <li class="pr-3">
        @Html.ActionLink("My Jobs", "GetJobsByPublisher", "Home", new { @class = "btn btn-outline-warning navbar-buttons" })
    </li>
        }
        else
        {
            <li class="pr-3">
                @Html.ActionLink("My Jobs", "MyJobs", "Home", new { @class = "btn btn-outline-warning navbar-buttons" })
            </li>

        }


        <li class="pr-4">
            <input type="submit" value="Log Off" class="btn btn-outline-warning navbar-buttons" />
        </li>
    </ul>
}
}
else
{
<ul class="navbar-nav ml-auto">
    <li class="nav-item active">
        <a href="/Account/Login" class="nav-link">
            <span class="fi-account-login icon" alt="Categories"></span>
            Sign In
        </a>
            <span class="sr-only">(current)</span>
    </li>
    <li class="nav-item active">
        <a href="/Account/Register" class="nav-link">
            <span class="fi-lock-locked icon" alt="Categories"></span>
            Register
        </a>
        <span class="sr-only">(current)</span>
    </li>

</ul>
}