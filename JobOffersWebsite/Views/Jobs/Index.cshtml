@model IEnumerable<JobOffersWebsite.Models.Job>

@{
    ViewBag.Title = "Job List";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="latest-jobs pt-5 mt-5">
    <h1>Job List</h1>
    <div class="container  pt-5 mt-5">
        @Html.ActionLink("Create New Job", "Create",null,new { @class="btn btn-info btn-md"})
    </div>
    <div class="container pt-3 mt-3">
        <div class="row">
            @foreach (var item in Model)
            {<div class="container">
                    <div class="row job-card mb-3 py-3">
                        <div class="col-md-3">
                            <img class="img-fluid img-thumbnail" src="~/Uploads/@Html.DisplayFor(m=>item.JobImage)" />
                        </div>
                        <div class="col-md-9 pt-3">
                            <h5>Part Time</h5>
                            <h3>@Html.DisplayFor(m => item.JobTitle)</h3>
                            <br />
                            <p>COMPANYNAME - Posted 6 months ago</p>
                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <p>Location: 9 Remsen St Brooklyn, NY</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Category: @item.Category.CategoryType</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Salary: $18 - $25 per hour</p>
                                    </div>
                                </div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>












