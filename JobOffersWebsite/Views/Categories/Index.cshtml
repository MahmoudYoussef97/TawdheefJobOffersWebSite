@model IEnumerable<JobOffersWebsite.Models.Category>

@{
    ViewBag.Title = "Job Categories";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <section class="container-fluid job-category-head pt-5 mt-5">

        <h2>Job Categories</h2>
        <div class="container-fluid mx-5">
            @if (User.IsInRole("Admins"))
            {
                @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn btn-outline-info btn-md mb-3" })
            }
        </div>
        <div class="container-fluid px-5 py-5">
            <div class="row">
                @foreach(var item in Model)
                {
                <div class="col-md-4 mb-5">
                    <div class="col category-card">
                        <a class="" href="/jobs/GetCategories/@item.Id">
                            <span class="fi-minus"></span>
                            <h5>@Html.DisplayFor(m => item.CategoryType)</h5>
                            <p>@Html.DisplayFor(m => item.CategoryDescription)</p>
                            <button class="btn btn-outline-warning mb-3">@Html.DisplayFor(m => item.Jobs.Count) Open Positions</button>
                            <br />
                            @if (User.IsInRole("Admins"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info mr-3" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning mr-3" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mr-3" })
                            }
                        </a>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>

