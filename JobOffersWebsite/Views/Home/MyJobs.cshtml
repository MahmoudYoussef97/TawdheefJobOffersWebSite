@model IEnumerable<JobOffersWebsite.Models.ApplyForJob>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<section class="users-jobs pt-5 mt-5">
    <h1>Applied Jobs</h1>
    <div class="container pt-3 mt-5">
        <div class="row">
            @foreach (var item in Model)
            {<div class="container">
                    <div class="row job-card mb-3 py-3">
                        <div class="col-md-3">
                            <img class="img-fluid img-thumbnail" src="~/Uploads/@Html.DisplayFor(m=>item.Job.JobImage)" />
                        </div>
                        <div class="col-md-9 pt-3">
                            <h5>Part Time</h5>
                            <h3>@Html.DisplayFor(m => item.Job.JobTitle)</h3>
                            <p>Apply Date: @String.Format("{0:ddd, MMM d, yyyy}", item.ApplyDate)</p>
                            <br />
                            <p>COMPANYNAME - Posted 6 months ago</p>
                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <p>Location: 9 Remsen St Brooklyn, NY</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Category: @item.Job.Category.CategoryType</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Salary: $18 - $25 per hour</p>
                                    </div>
                                </div>
                                <div class="row">
                                    @Html.ActionLink("Show Application", "ApplicationJobDetails", new { appliedJobId = item.Id }, new { @class = "btn btn-secondary mr-3" })
                                    @Html.ActionLink("Edit Application", "ApplicationJobEdit", new { appliedJobId = item.Id }, new { @class = "btn btn-success mr-3" })
                                    @Html.ActionLink("Delete Application", "Delete", new { appliedJobId = item.Id }, new { @class = "btn btn-danger mr-3" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
  
</section>

